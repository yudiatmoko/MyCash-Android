<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/mycash_logo_wtext"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyCash"
        tools:targetApi="31" >
        <activity
            android:name=".ui.manage.product.ProductUpdateActivity"
            android:exported="false" />
        <activity
            android:name=".ui.manage.product.ProductListActivity"
            android:exported="false" />
        <activity
            android:name=".ui.manage.product.AddProductActivity"
            android:exported="false" />
        <activity
            android:name=".ui.manage.category.CategoryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.settings.outlet.OutletDataUpdateActivity"
            android:exported="false" />
        <activity
            android:name=".ui.settings.user.UserUpdateActivity"
            android:exported="false" />
        <activity
            android:name=".ui.settings.detail.DetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.outlet.OutletActivity"
            android:exported="false" />
        <activity
            android:name=".ui.signin.SignInActivity"
            android:exported="false"
            android:theme="@style/Theme.MyCash.NoActionBar" />
        <activity
            android:name=".ui.resetpassword.ResetPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.MyCash.NoActionBar" />
        <activity
            android:name=".ui.signup.SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.MyCash.NoActionBar" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.App.Starting" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false" />
    </application>

</manifest>