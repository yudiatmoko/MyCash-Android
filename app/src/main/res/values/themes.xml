    <!-- Base application theme. -->
    <style name="Base.Theme.MyCash" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/md_dark_primary</item>
        <item name="colorOnPrimary">@color/md_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_light_secondary</item>
        <item name="colorOnSecondary">@color/md_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_light_error</item>
        <item name="colorOnError">@color/md_light_onError</item>
        <item name="colorErrorContainer">@color/md_light_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_light_background</item>
        <item name="colorOnBackground">@color/md_light_onBackground</item>
        <item name="colorSurface">@color/md_light_surface</item>
        <item name="colorOnSurface">@color/md_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_light_outline</item>
        <item name="colorOutlineVariant">@color/md_light_outlineVariant</item>
        <item name="colorSurfaceInverse">@color/md_light_inverseSurface</item>
        <item name="colorOnSurfaceInverse">@color/md_light_inverseOnSurface</item>
        <item name="colorPrimaryInverse">@color/md_light_inversePrimary</item>
        <item name="colorPrimaryFixed">@color/md_light_primaryFixed</item>
        <item name="colorOnPrimaryFixed">@color/md_light_onPrimaryFixed</item>
        <item name="colorPrimaryFixedDim">@color/md_light_primaryFixedDim</item>
        <item name="colorOnPrimaryFixedVariant">@color/md_light_onPrimaryFixedVariant</item>
        <item name="colorSecondaryFixed">@color/md_light_secondaryFixed</item>
        <item name="colorOnSecondaryFixed">@color/md_light_onSecondaryFixed</item>
        <item name="colorSecondaryFixedDim">@color/md_light_secondaryFixedDim</item>
        <item name="colorOnSecondaryFixedVariant">@color/md_light_onSecondaryFixedVariant</item>
        <item name="colorTertiaryFixed">@color/md_light_tertiaryFixed</item>
        <item name="colorOnTertiaryFixed">@color/md_light_onTertiaryFixed</item>
        <item name="colorTertiaryFixedDim">@color/md_light_tertiaryFixedDim</item>
        <item name="colorOnTertiaryFixedVariant">@color/md_light_onTertiaryFixedVariant</item>
        <item name="colorSurfaceDim">@color/md_light_surfaceDim</item>
        <item name="colorSurfaceBright">@color/md_light_surfaceBright</item>
        <item name="colorSurfaceContainerLowest">@color/md_light_surfaceContainerLowest</item>
        <item name="colorSurfaceContainerLow">@color/md_light_surfaceContainerLow</item>
        <item name="colorSurfaceContainer">@color/md_light_surfaceContainer</item>
        <item name="colorSurfaceContainerHigh">@color/md_light_surfaceContainerHigh</item>
        <item name="colorSurfaceContainerHighest">@color/md_light_surfaceContainerHighest</item>
        <item name="actionBarStyle">@style/Widget.App.ActionBar</item>
    </style>

    <style name="Theme.MyCash" parent="Base.Theme.MyCash" />

    <style name="Theme.MyCash.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/md_dark_primary</item>
    </style>

    <style name="RoundedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded
        </item>
        <item name="boxStrokeColor">@color/til_stroke_color</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="TextAppearance.App.ActionBar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
    </style>

    <style name="Widget.App.ActionBar" parent="Widget.MaterialComponents.ActionBar.PrimarySurface">
        <item name="titleTextStyle">@style/TextAppearance.App.ActionBar.Title</item>
    </style>

    <!-- Tema SplashScreen -->
    <style name="Theme.App.Starting" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Warna latar belakang SplashScreen -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Logo atau ikon di tengah SplashScreen -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/mycash_logo_wtext</item>

        <!-- Durasi animasi ikon (opsional) -->
        <item name="windowSplashScreenAnimationDuration">500</item>
    </style>
</resources>