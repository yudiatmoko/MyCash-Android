<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="vertical">    <com.google.android.material.textfield.TextInputLayout        android:id="@+id/til_name"        style="@style/RoundedTextInputLayout"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginVertical="2dp"        app:endIconMode="clear_text"        app:hintEnabled="false"        app:startIconDrawable="@drawable/baseline_person_24"        app:startIconScaleType="center"        app:startIconTint="@color/md_dark_primary">        <com.google.android.material.textfield.TextInputEditText            android:id="@+id/et_name"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:fontFamily="@font/nunito_sans_medium"            android:hint="@string/username"            android:imeOptions="flagNavigateNext"            android:inputType="text"            android:padding="12dp"            android:textSize="14sp" />    </com.google.android.material.textfield.TextInputLayout>    <com.google.android.material.textfield.TextInputLayout        android:id="@+id/til_email"        style="@style/RoundedTextInputLayout"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginVertical="2dp"        app:endIconMode="clear_text"        app:hintEnabled="false"        app:startIconDrawable="@drawable/round_email_24"        app:startIconScaleType="center"        app:startIconTint="@color/md_dark_primary">        <com.google.android.material.textfield.TextInputEditText            android:id="@+id/et_email"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:fontFamily="@font/nunito_sans_medium"            android:hint="@string/email"            android:imeOptions="flagNavigateNext"            android:inputType="text"            android:padding="12dp"            android:textSize="14sp" />    </com.google.android.material.textfield.TextInputLayout>    <com.google.android.material.textfield.TextInputLayout        android:id="@+id/til_otp"        style="@style/RoundedTextInputLayout"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginVertical="2dp"        app:endIconMode="clear_text"        app:hintEnabled="false"        app:startIconDrawable="@drawable/baseline_key_24"        app:startIconScaleType="center"        app:startIconTint="@color/md_dark_primary">        <com.google.android.material.textfield.TextInputEditText            android:id="@+id/et_otp"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:fontFamily="@font/nunito_sans_medium"            android:hint="@string/otp"            android:imeOptions="flagNavigateNext"            android:inputType="number"            android:maxLength="6"            android:padding="12dp"            android:textSize="14sp" />    </com.google.android.material.textfield.TextInputLayout>    <com.google.android.material.textfield.TextInputLayout        android:id="@+id/til_password"        style="@style/RoundedTextInputLayout"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginVertical="2dp"        app:endIconMode="password_toggle"        app:hintEnabled="false"        app:startIconDrawable="@drawable/round_lock_24"        app:startIconScaleType="center"        app:startIconTint="@color/md_dark_primary">        <com.google.android.material.textfield.TextInputEditText            android:id="@+id/et_password"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:fontFamily="@font/nunito_sans_medium"            android:hint="@string/password"            android:imeOptions="flagNavigateNext"            android:inputType="textPassword"            android:padding="12dp"            android:textSize="14sp" />    </com.google.android.material.textfield.TextInputLayout>    <com.google.android.material.textfield.TextInputLayout        android:id="@+id/til_confirm_password"        style="@style/RoundedTextInputLayout"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginVertical="2dp"        app:endIconMode="password_toggle"        app:hintEnabled="false"        app:startIconDrawable="@drawable/round_lock_24"        app:startIconScaleType="center"        app:startIconTint="@color/md_dark_primary">        <com.google.android.material.textfield.TextInputEditText            android:id="@+id/et_confirm_password"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:fontFamily="@font/nunito_sans_medium"            android:hint="@string/confirm_password"            android:imeOptions="actionDone"            android:inputType="textPassword"            android:padding="12dp"            android:textSize="14sp" />    </com.google.android.material.textfield.TextInputLayout></LinearLayout>