<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="vertical">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:gravity="center_vertical"        android:orientation="horizontal"        android:weightSum="6">        <TextView            android:id="@+id/tv_product_name"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="5"            android:ellipsize="end"            android:fontFamily="@font/nunito_sans_medium"            android:maxLines="1"            android:textSize="16sp"            tools:text="@string/product_name_example" />        <View            android:layout_width="0.5dp"            android:layout_height="match_parent"            android:layout_marginHorizontal="12dp"            android:background="@color/md_dark_primary" />        <TextView            android:id="@+id/tv_transaction_sum"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:ellipsize="end"            android:fontFamily="@font/nunito_sans_bold"            android:maxLines="1"            android:text="@string/transaction_count"            android:textAlignment="textStart"            android:textColor="@color/md_dark_primary"            android:textSize="14sp" />    </LinearLayout>    <View        android:id="@+id/view"        android:layout_width="match_parent"        android:layout_height="0.5dp"        android:layout_marginVertical="12dp"        android:background="@color/md_dark_primary"        android:foreground="?android:attr/selectableItemBackground" /></LinearLayout>