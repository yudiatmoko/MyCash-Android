<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="vertical">    <androidx.constraintlayout.widget.ConstraintLayout        android:id="@+id/main_layout"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:gravity="center">        <com.google.android.material.imageview.ShapeableImageView            android:id="@+id/iv_product"            android:layout_width="72dp"            android:layout_height="72dp"            android:adjustViewBounds="true"            android:scaleType="centerCrop"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintEnd_toStartOf="@id/tv_product_name"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toTopOf="parent"            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Small"            tools:src="@tools:sample/avatars" />        <TextView            android:id="@+id/tv_product_name"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_marginStart="12dp"            android:layout_marginEnd="12dp"            android:ellipsize="end"            android:fontFamily="@font/nunito_sans_bold"            android:maxLines="2"            android:textAlignment="textStart"            android:textSize="16sp"            app:layout_constraintBottom_toTopOf="@id/tv_product_desc"            app:layout_constraintEnd_toStartOf="@id/btn_edit"            app:layout_constraintStart_toEndOf="@id/iv_product"            app:layout_constraintTop_toTopOf="parent"            tools:text="@tools:sample/cities" />        <TextView            android:id="@+id/tv_product_desc"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_marginStart="12dp"            android:layout_marginEnd="12dp"            android:ellipsize="end"            android:fontFamily="@font/nunito_sans_medium"            android:maxLines="1"            android:textAlignment="textStart"            android:textSize="14sp"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintEnd_toStartOf="@id/btn_edit"            app:layout_constraintStart_toEndOf="@id/iv_product"            app:layout_constraintTop_toBottomOf="@id/tv_product_name"            tools:text="@tools:sample/backgrounds/scenic" />        <ImageButton            android:id="@+id/btn_edit"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginEnd="12dp"            android:background="@android:color/transparent"            android:foreground="?android:attr/selectableItemBackground"            android:src="@drawable/round_edit_24"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintEnd_toStartOf="@id/btn_delete"            app:layout_constraintStart_toEndOf="@id/tv_product_name"            app:layout_constraintTop_toTopOf="parent"            app:tint="@color/md_dark_primary" />        <ImageButton            android:id="@+id/btn_delete"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginEnd="12dp"            android:background="@android:color/transparent"            android:foreground="?android:attr/selectableItemBackground"            android:src="@drawable/round_delete_24"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toEndOf="@id/btn_edit"            app:layout_constraintTop_toTopOf="parent"            app:tint="@color/md_light_error" />    </androidx.constraintlayout.widget.ConstraintLayout>    <View        android:id="@+id/view"        android:layout_width="match_parent"        android:layout_height="0.5dp"        android:layout_marginTop="8dp"        android:layout_marginBottom="10dp"        android:background="@color/md_dark_primary" /></LinearLayout>