<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="vertical"    android:paddingHorizontal="22dp"    android:paddingVertical="12dp">    <androidx.constraintlayout.widget.ConstraintLayout        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_gravity="center_horizontal"        android:layout_marginVertical="2dp">        <com.google.android.material.imageview.ShapeableImageView            android:id="@+id/iv_product_photo"            android:layout_width="112dp"            android:layout_height="112dp"            android:adjustViewBounds="true"            android:scaleType="centerCrop"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toTopOf="parent"            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"            tools:src="@tools:sample/avatars" />        <com.google.android.material.imageview.ShapeableImageView            android:id="@+id/btn_add_image"            android:layout_width="28dp"            android:layout_height="28dp"            android:layout_marginEnd="4dp"            android:background="@drawable/cv_background"            android:foreground="?android:attr/selectableItemBackground"            android:src="@drawable/round_insert_photo_24"            app:contentPadding="4dp"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintEnd_toEndOf="parent"            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"            app:strokeColor="@color/white"            app:strokeWidth="0.2dp"            app:tint="@color/white" />    </androidx.constraintlayout.widget.ConstraintLayout>    <TextView        android:id="@+id/tv_product_name"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginStart="10dp"        android:layout_marginTop="6dp"        android:layout_marginBottom="2dp"        android:fontFamily="@font/nunito_sans_medium"        android:text="@string/product_name"        android:textAlignment="textStart"        android:textSize="14sp" />    <com.google.android.material.textfield.TextInputLayout        android:id="@+id/til_product_name"        style="@style/RoundedTextInputLayout"        android:layout_width="match_parent"        android:layout_height="wrap_content"        app:endIconMode="clear_text"        app:hintEnabled="false">        <com.google.android.material.textfield.TextInputEditText            android:id="@+id/et_product_name"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:fontFamily="@font/nunito_sans_medium"            android:hint="@string/product_name_example"            android:imeOptions="flagNavigateNext"            android:inputType="text"            android:padding="12dp"            android:textSize="14sp" />    </com.google.android.material.textfield.TextInputLayout>    <TextView        android:id="@+id/tv_product_category"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginStart="10dp"        android:layout_marginTop="6dp"        android:layout_marginBottom="2dp"        android:fontFamily="@font/nunito_sans_medium"        android:text="@string/product_category"        android:textAlignment="textStart"        android:textSize="14sp" />    <com.google.android.material.textfield.TextInputLayout        android:id="@+id/til_product_category"        style="@style/RoundedDropdown"        android:layout_width="match_parent"        android:layout_height="wrap_content"        app:hintEnabled="false">        <AutoCompleteTextView            android:id="@+id/et_product_category"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:enabled="false"            android:fontFamily="@font/nunito_sans_medium"            android:inputType="none"            android:padding="12dp"            android:text="@string/product_category_example"            android:textSize="14sp" />    </com.google.android.material.textfield.TextInputLayout>    <TextView        android:id="@+id/tv_product_description"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginStart="10dp"        android:layout_marginTop="6dp"        android:layout_marginBottom="2dp"        android:fontFamily="@font/nunito_sans_medium"        android:text="@string/product_description"        android:textAlignment="textStart"        android:textSize="14sp" />    <com.google.android.material.textfield.TextInputLayout        android:id="@+id/til_product_description"        style="@style/RoundedTextInputLayout"        android:layout_width="match_parent"        android:layout_height="wrap_content"        app:endIconMode="clear_text"        app:hintEnabled="false">        <com.google.android.material.textfield.TextInputEditText            android:id="@+id/et_product_description"            android:layout_width="match_parent"            android:layout_height="128dp"            android:layout_gravity="start"            android:fontFamily="@font/nunito_sans_medium"            android:gravity="start|top"            android:hint="@string/product_description_example"            android:imeOptions="flagNavigateNext"            android:inputType="textMultiLine"            android:lines="5"            android:maxLines="5"            android:padding="12dp"            android:textSize="14sp" />    </com.google.android.material.textfield.TextInputLayout>    <TextView        android:id="@+id/tv_product_price"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginStart="10dp"        android:layout_marginTop="6dp"        android:layout_marginBottom="2dp"        android:fontFamily="@font/nunito_sans_medium"        android:text="@string/product_price"        android:textAlignment="textStart"        android:textSize="14sp" />    <com.google.android.material.textfield.TextInputLayout        android:id="@+id/til_product_price"        style="@style/RoundedTextInputLayout"        android:layout_width="match_parent"        android:layout_height="wrap_content"        app:endIconMode="clear_text"        app:hintEnabled="false"        app:prefixTextColor="@color/md_dark_primary">        <com.google.android.material.textfield.TextInputEditText            android:id="@+id/et_product_price"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:fontFamily="@font/nunito_sans_medium"            android:hint="@string/product_price_example"            android:imeOptions="flagNavigateNext"            android:inputType="number"            android:padding="12dp"            android:textSize="14sp" />    </com.google.android.material.textfield.TextInputLayout>    <TextView        android:id="@+id/tv_product_stock"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginStart="10dp"        android:layout_marginTop="6dp"        android:layout_marginBottom="2dp"        android:fontFamily="@font/nunito_sans_medium"        android:text="@string/product_stock"        android:textAlignment="textStart"        android:textSize="14sp" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal">        <com.google.android.material.textfield.TextInputLayout            android:id="@+id/til_product_stock"            style="@style/RoundedTextInputLayout"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_gravity="center"            android:layout_weight="3"            app:endIconMode="clear_text"            app:hintEnabled="false">            <com.google.android.material.textfield.TextInputEditText                android:id="@+id/et_product_stock"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginEnd="6dp"                android:enabled="false"                android:fontFamily="@font/nunito_sans_medium"                android:hint="@string/unlimited"                android:imeOptions="actionDone"                android:inputType="number"                android:padding="12dp"                android:textSize="14sp" />        </com.google.android.material.textfield.TextInputLayout>        <androidx.appcompat.widget.SwitchCompat            android:id="@+id/switch_stock"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:thumb="@drawable/custom_thumb"            app:track="@drawable/custom_track" />    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="6dp"        android:gravity="center_vertical"        android:orientation="horizontal">        <TextView            android:id="@+id/tv_product_status"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_marginEnd="6dp"            android:layout_weight="3"            android:ellipsize="end"            android:fontFamily="@font/nunito_sans_bold"            android:maxLines="2"            android:text="@string/product_status_desc"            android:textAlignment="textStart"            android:textSize="14sp" />        <androidx.appcompat.widget.SwitchCompat            android:id="@+id/switch_status"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:thumb="@drawable/custom_thumb"            app:track="@drawable/custom_track" />    </LinearLayout>    <FrameLayout        android:id="@+id/btn_save"        android:layout_width="match_parent"        android:layout_height="72dp"        android:maxHeight="72dp"        app:layout_constraintBottom_toTopOf="@id/tv_already_have_account"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@id/form_layout">        <com.airbnb.lottie.LottieAnimationView            android:id="@+id/loading"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:visibility="gone"            app:lottie_autoPlay="true"            app:lottie_loop="true"            app:lottie_rawRes="@raw/loading_state"            app:lottie_speed="2"            tools:visibility="visible" />        <Button            android:id="@+id/btn"            style="@style/RoundedButton"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_gravity="center"            android:fontFamily="@font/nunito_sans_bold"            android:text="@string/save"            android:textAllCaps="false"            android:textSize="16sp" />    </FrameLayout></LinearLayout>