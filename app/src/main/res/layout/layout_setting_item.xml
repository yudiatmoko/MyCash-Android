<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="vertical">    <androidx.constraintlayout.widget.ConstraintLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:gravity="center">        <ImageView            android:id="@+id/iv_setting_icon"            android:layout_width="32dp"            android:layout_height="32dp"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintEnd_toStartOf="@id/tv_setting_item"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toTopOf="parent"            app:tint="@color/md_dark_primary"            tools:src="@drawable/round_person_24" />        <TextView            android:id="@+id/tv_setting_item"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_marginStart="12dp"            android:ellipsize="end"            android:fontFamily="@font/nunito_sans_bold"            android:maxLines="1"            android:textAlignment="textStart"            android:textSize="16sp"            app:layout_constraintBottom_toTopOf="@id/tv_setting_desc"            app:layout_constraintEnd_toStartOf="@id/btn_more"            app:layout_constraintStart_toEndOf="@id/iv_setting_icon"            app:layout_constraintTop_toTopOf="parent"            tools:text="@tools:sample/cities" />        <TextView            android:id="@+id/tv_setting_desc"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_marginStart="12dp"            android:ellipsize="end"            android:fontFamily="@font/nunito_sans_medium"            android:maxLines="2"            android:textAlignment="textStart"            android:textSize="14sp"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintEnd_toStartOf="@id/btn_more"            app:layout_constraintStart_toEndOf="@id/iv_setting_icon"            app:layout_constraintTop_toBottomOf="@id/tv_setting_item"            tools:text="@tools:sample/backgrounds/scenic" />        <ImageButton            android:id="@+id/btn_more"            android:layout_width="wrap_content"            android:layout_height="0dp"            android:background="@android:color/transparent"            android:src="@drawable/round_keyboard_arrow_right_24"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toEndOf="@id/tv_setting_item"            app:layout_constraintTop_toTopOf="parent"            app:tint="@color/md_dark_primary" />    </androidx.constraintlayout.widget.ConstraintLayout>    <View        android:id="@+id/view"        android:layout_width="match_parent"        android:layout_height="0.5dp"        android:layout_marginTop="8dp"        android:layout_marginBottom="10dp"        android:background="@color/md_dark_primary" /></LinearLayout>