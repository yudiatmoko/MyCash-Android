<?xml version="1.0" encoding="utf-8"?><androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/cv_dialog"    android:layout_width="wrap_content"    android:layout_height="wrap_content"    android:layout_gravity="center"    android:layout_marginHorizontal="12dp"    app:cardCornerRadius="12dp">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:gravity="center"        android:orientation="vertical"        android:paddingHorizontal="12dp"        android:paddingVertical="10dp">        <TextView            android:id="@+id/tv_title"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:ellipsize="end"            android:fontFamily="@font/nunito_sans_bold"            android:maxLines="1"            android:textAlignment="center"            android:textSize="18sp"            tools:text="@tools:sample/full_names" />        <ImageView            android:id="@+id/iv_qr"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="12dp"            android:minWidth="200dp"            android:minHeight="200dp"            tools:src="@tools:sample/avatars" />        <com.google.android.material.button.MaterialButton            android:id="@+id/btn_close"            style="@style/RoundedButton"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="12dp"            android:ellipsize="end"            android:fontFamily="@font/nunito_sans_bold"            android:maxLines="1"            android:textAllCaps="false"            android:textSize="14sp"            tools:text="@tools:sample/full_names" />    </LinearLayout></androidx.cardview.widget.CardView>