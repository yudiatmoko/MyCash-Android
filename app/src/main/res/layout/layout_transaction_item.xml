<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="48dp"    android:orientation="vertical">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal"        android:weightSum="3">        <TextView            android:id="@+id/tv_product_name"            android:layout_width="0dp"            android:layout_weight="2"            android:layout_height="wrap_content"            android:ellipsize="end"            android:fontFamily="@font/nunito_sans_bold"            android:maxLines="1"            android:text="@string/transaction_product_example"            android:textAlignment="textStart"            android:textSize="14sp" />        <TextView            android:id="@+id/tv_total_price"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:ellipsize="end"            android:fontFamily="@font/nunito_sans_bold"            android:maxLines="1"            android:textAlignment="textEnd"            android:textSize="14sp"            tools:text="@string/_0" />    </LinearLayout>    <TextView        android:id="@+id/tv_product_price"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginStart="18dp"        android:ellipsize="end"        android:fontFamily="@font/nunito_sans_medium"        android:maxLines="1"        android:textAlignment="textStart"        android:textSize="14sp"        tools:text="@string/product_price_transaction_item" /></LinearLayout>