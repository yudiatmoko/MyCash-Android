<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical">    <com.google.android.material.textfield.TextInputLayout        android:id="@+id/til_total_payment"        style="@style/RoundedTextInputLayout"        android:layout_width="match_parent"        android:layout_height="wrap_content"        app:endIconMode="clear_text"        app:hintEnabled="false">        <com.google.android.material.textfield.TextInputEditText            android:id="@+id/et_total_payment"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:fontFamily="@font/nunito_sans_bold"            android:hint="@string/_0"            android:imeOptions="actionDone"            android:inputType="number"            android:padding="12dp"            android:textAlignment="textEnd"            android:textColor="@color/md_dark_primary"            android:textColorHint="@color/md_dark_primary"            android:textSize="24sp" />    </com.google.android.material.textfield.TextInputLayout>    <androidx.recyclerview.widget.RecyclerView        android:id="@+id/rv_denomination"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="12dp"        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"        app:spanCount="2"        tools:itemCount="8"        tools:listitem="@layout/layout_denomination_item" />    <com.google.android.material.textfield.TextInputLayout        android:id="@+id/til_note"        style="@style/RoundedTextInputLayout"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="12dp"        android:layout_marginBottom="6dp"        app:endIconMode="clear_text"        app:hintEnabled="false">        <com.google.android.material.textfield.TextInputEditText            android:id="@+id/et_note"            android:layout_width="match_parent"            android:layout_height="128dp"            android:layout_gravity="start"            android:fontFamily="@font/nunito_sans_medium"            android:gravity="start|top"            android:hint="@string/note_example"            android:imeOptions="flagNavigateNext"            android:inputType="textMultiLine"            android:lines="5"            android:maxLines="5"            android:padding="12dp"            android:textSize="14sp" />    </com.google.android.material.textfield.TextInputLayout></LinearLayout>